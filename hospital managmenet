    <script>
        document.getElementById('find-btn').addEventListener('click', function() {
            var specialization = document.getElementById('specialization').value;
            var location = document.getElementById('location').value;
            if (specialization && location) {
                var xhr = new XMLHttpRequest();
                xhr.open('GET', 'find_medician.php?specialization=' + specialization + '&location=' + location, true);
                xhr.onload = function() {
                    if (this.status == 200) {
                        var result = JSON.parse(this.responseText);
                        var html = '';
                        if (result.length) {
                            result.forEach(function(medician) {
                                html += '<p><strong>' + medician.name + '</strong><br>' +
                                    medician.specialization + '<br>' +
                                    medician.location + '</p>';
                            });
                            
